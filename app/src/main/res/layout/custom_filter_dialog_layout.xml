<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray"
    android:orientation="vertical"
    android:padding="10sp"
    android:layout_gravity="bottom|center">

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_gravity="right"
        android:layout_marginTop="8sp"
        android:layout_marginRight="8sp"
        android:src="@drawable/cross" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/text_title_orange"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/round_green"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10sp"
            android:text="Location"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15sp"
            android:src="@drawable/cross_white" />


    </RelativeLayout>


    <EditText
        android:id="@+id/et_zip_code"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/round_corner"
        android:gravity="center_vertical"
        android:paddingLeft="15sp"
        android:hint="ZipCode"
        android:inputType="number"
        android:textSize="@dimen/text_size" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/round_corner"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/spinner_choose_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"></Spinner>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kcals"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_seekbar_miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="10 Kcals"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/sb_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:backgroundTint="@color/text_title_orange"
        android:max="1230"
        android:min="30"
        android:progress="500"
        android:thumb="@drawable/seekbar_thum_shap" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_seekbar_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/sb_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:backgroundTint="@color/text_title_orange"
        android:max="100"
        android:progress="30"
        android:thumb="@drawable/seekbar_thum_shap" />


    <Button
        android:id="@+id/btn_apply_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:layout_marginTop="20sp"
        android:background="@mipmap/btn2"
        android:gravity="center"
        android:paddingBottom="15sp"
        android:text="Apply Filter"
        android:textColor="@android:color/white" />

</LinearLayout>
