<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorGray"
    android:orientation="vertical"
    android:paddingLeft="20sp"
    android:paddingRight="20sp">

    <ImageView
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_gravity="right"
        android:layout_marginTop="8sp"
        android:layout_marginRight="8sp"
        android:src="@drawable/cross" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/text_title_orange"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginRight="200sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/round_green"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10sp"
            android:text="Location"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15sp"
            android:src="@drawable/cross_white" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/round_corner"
        android:gravity="center_vertical"
        android:paddingLeft="15sp"
        android:text="Location"
        android:textSize="@dimen/text_size" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/round_corner"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20sp"
            android:paddingLeft="15sp"
            android:text="Choose Category"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20sp"
            android:layout_marginRight="15sp"
            android:src="@drawable/drop_down" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="20 Miles"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:backgroundTint="@color/text_title_orange"
        android:max="15"
        android:progress="9"
        android:thumb="@drawable/seekbar_thum_shap" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 40"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:backgroundTint="@color/text_title_orange"
        android:max="15"
        android:progress="9"
        android:thumb="@drawable/seekbar_thum_shap" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:layout_marginTop="20sp"
        android:background="@mipmap/btn2"
        android:gravity="center"
        android:paddingBottom="15sp"
        android:text="Apply Filter"
        android:textColor="@android:color/white" />

</LinearLayout>
