<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context=".ui.fragment.SignUpFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/logo_widith"
            android:layout_height="@dimen/logo_height"
            android:layout_marginTop="@dimen/logo_margin_top"
            android:src="@mipmap/logo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:text="Get started with"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/fb_login_button"
                    android:layout_width="42sp"
                    android:layout_height="42sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/facebook" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/facebook" />
            </FrameLayout>


            <ImageView
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20sp"
                android:background="@mipmap/google" />

            <ImageView
                android:id="@+id/iv_fb_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon"
                android:layout_marginLeft="20sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="Or Sign up with"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_signup_email"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:layout_marginLeft="@dimen/margin_50sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="@dimen/margin_50sp"
            android:background="@mipmap/btn2"
            android:paddingBottom="15sp"
            android:text="Email Address"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.2"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_already_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20sp"
            android:text="@string/already_onboar_login" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.9sp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:alpha="0.5"
                android:src="@drawable/back" />

            <View
                android:layout_width="1sp"
                android:layout_height="40sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>